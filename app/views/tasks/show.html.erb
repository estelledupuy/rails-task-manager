<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed%>
  <p><i class="fa-regular fa-square-check"></i> This task is completed</p>
  <% else %>
  <p><i class="fa-regular fa-square"></i> This task is not completed yet </p>
  <% end %>
  <p><%= link_to "Update task", edit_task_path %> </p>
  <p><%= link_to "Back to list", tasks_path %> </p>
</div>
